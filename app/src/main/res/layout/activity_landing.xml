<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LandingActivity">

    <Button
        android:id="@+id/btn_call_center"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/call_center"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_button"
        android:onClick="startCallCenterActivity"/>

    <Button
        android:id="@+id/btn_technician"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/technician"
        android:layout_below="@id/btn_call_center"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="startLoginActivity"/>


</RelativeLayout>